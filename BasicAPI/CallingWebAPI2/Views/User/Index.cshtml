@model IEnumerable<CallingWebAPI2.Models.UserViewModel>

<p>
    <a asp-action="Create" class="btn btn-light btn-outline-dark">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RollNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RollNo)
            </td>
            <td>
                <a asp-controller="User" asp-action="Edit" asp-route-id="@item.Id"
                        class="btn btn-primary mx-2">Edit</a>
                <a asp-controller="User" asp-action="delete" asp-route-id="@item.Id"
                        class="btn btn-danger mx-2">Delete</a>
                <a asp-controller="User" asp-action="Details" asp-route-id="@item.Id"
                        class="btn btn-secondary mx-2">Details</a>
            </td>    
        </tr>
}
    </tbody>
</table>