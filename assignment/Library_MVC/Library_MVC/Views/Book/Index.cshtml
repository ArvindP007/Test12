@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

@if(TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}
<h3 class="display-8">Book Details</h3>

<br />
<table class="table table-borderless" style="width:70%">
    <tr>
        <th>
                Book Details
        </th>
        <th>
            <a asp-controller="Book" asp-action="AddBook" class="btn btn-outline-primary">Add Book</a>
        </th>
    </tr>
</table>
<table class="table table-bordered table-striped" style="width:80%">
    
    <thead>
        <tr>
            <th>
                Book Id
            </th>
            <th>
                Book Name
            </th>
            <th>
                Book Author
            </th>
            <th>
                Book Price
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">@obj.Id </td>
                <td width="30%">@obj.BookName </td>
                <td width="30%">@obj.Author </td>
                <td width="30%">@obj.price </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Book" asp-action="UpdateBook" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"><i>Edit</i>
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"><i>Delete</i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
