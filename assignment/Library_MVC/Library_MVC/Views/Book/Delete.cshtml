@model Book
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Delete Book</h2>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Id"></label>
        <input asp-for="Id" disabled class="form-control"/>
        <span asp-validation-for="Id"></span>
    </div>
    <div class="mb-3"> 
        <label asp-for="BookName"></label>
        <input asp-for="BookName" disabled class="form-control"/>
        <span asp-validation-for="BookName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" class="text-danger">Delete</button>
    <a asp-controller="Book" asp-action="Index" class="btn btn-secondary">Back to list</a>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

