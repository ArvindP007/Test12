@model MyApp.Models.ViewModels.ProductVM
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-bg-light">List of Products</h2>
        </div>
        <div class="col-6"> 
            <a class="btn btn-outline-primary" asp-action="CreateUpdate" asp-controller="Product"><i class="bi bi-person-add"></i> Create New Product</a>   
        </div>
    </div>

</div>

<table id="myTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Action</th>
            <th></th>
        </tr>
    </thead>
</table>


@section Scripts{
    <script>
        var dtable;
        dtable=$(document).ready(function () {
            $('#myTable').DataTable({
                ajax: {
                url: '/Admin/Product/AllProduct',
                type: "POST",
            },
                processing: true,
                serverSide: true,
                filter: true,

                columns: [
                { data: 'name' },
                { data: 'description' },
                { data: 'price' },
                { data: 'category.name'},
                { data: 'id' },
                {
                   data: function () {
                           return `
                               <a href="/Admin/Product/CreateUpdate?id=${'id'}" class="btn btn-primary mx-2"><i>Edit</i></a>
                               <a onClick=RemoveProduct("/Admin/Product/Delete/${'id'}") class="btn btn-danger mx-2"><i>Delete</i></a>
                                  `;
                   }
                }
            ]
        }
            );
        });

function RemoveProduct(url) {
        Swal.fire({
          title: 'Are you sure?',
          text: "You won't be able to revert this!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
          if (result.isConfirmed) {
              $.ajax({
                  url: url,
                  type: 'Delete',
                  success: function(data) {
                      if (data.success) {
                          dtable.ajax.reload();
                          toastr.success(data.message);
                      }
                      else{
                          toastr.error(data.message);
                      }
                  }
              }

        )
      }
    })
}
    </script>
}

